<button class="btn btn-outline-primary me-1 d-none d-md-inline" type="button" data-bs-toggle="modal" data-bs-target="#appsModal">
  <i class="fas fa-th-large"></i> Menu
</button>

<div class="modal fade" id="appsModal" tabindex="-1" aria-labelledby="appsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="appsModalLabel">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
      </div>

      <div class="modal-body">
        <div class="container">
          <div class="row row-cols-2 row-cols-md-3 g-4">
            <div class="col text-center">
              <a href="<%= home_songs_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="fas fa-music fa-3x mb-3"></i>
                  <span>Músicas</span>
                </div>
              </a>
            </div>
            <div class="col text-center">
              <a href="<%= songs_import_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="fas fa-upload fa-3x mb-3"></i>
                  <span>Importar Música</span>
                </div>
              </a>
            </div>
            <div class="col text-center">
              <a href="<%= playlists_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="far fa-list-alt fa-3x mb-3"></i>
                  <span>Minhas listas</span>
                </div>
              </a>
            </div>
            <div class="col text-center">
              <a href="<%= home_genres_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="fas fa-stream fa-3x mb-3"></i>
                  <span>Gêneros</span>
                </div>
              </a>
            </div>
            <div class="col text-center">
              <a href="<%= home_artists_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="fas fa-users fa-3x mb-3"></i>
                  <span>Artistas</span>
                </div>
              </a>
            </div>
            <div class="col text-center">
              <a href="<%= recordings_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="fas fa-file-audio fa-3x mb-3"></i>
                  <span>Minhas Gravações</span>
                </div>
              </a>
            </div>
            <div class="col text-center">
              <a href="<%= home_recordings_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="fas fa-broadcast-tower fa-3x mb-3"></i>
                  <span>Gravações Públicas</span>
                </div>
              </a>
            </div>
            <div class="col text-center">
              <a href="<%= home_playlists_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="fas fa-draw-polygon fa-3x mb-3"></i>
                  <span>Listas Públicas</span>
                </div>
              </a>
            </div>
            <div class="col text-center">
              <a href="<%= tuner_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="fas fa-wave-square fa-3x mb-3"></i>
                  <span>Afinador</span>
                </div>
              </a>
            </div>
            <div class="col text-center">
              <a href="<%= pads_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="fas fa-th fa-3x mb-3"></i>
                  <span>Pads</span>
                </div>
              </a>
            </div>
            <div class="col text-center">
              <a href="<%= metronome_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="fas fa-stopwatch fa-3x mb-3"></i>
                  <span>Metrônomo</span>
                </div>
              </a>
            </div>
            <div class="col text-center">
              <a href="<%= about_path %>" class="text-decoration-none">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i class="fas fa-info-circle fa-3x mb-3"></i>
                  <span>Sobre</span>
                </div>
              </a>
            </div>

            <div class="col text-center">
              <a href="#" class="text-decoration-none" onclick="toggleTheme()">
                <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                  <i id="theme-icon" class="fa fa-moon fa-3x mb-3"></i>
                  <span>Dark/Light</span>
                </div>
              </a>
            </div>

            <% if !current_user %>
              <div class="col text-center">
                <a href="<%= new_user_session_path %>" class="text-decoration-none">
                  <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-sign-in-alt fa-3x mb-3"></i>
                    <span>Login</span>
                  </div>
                </a>
              </div>
            <% else %>
              <% if current_user.role == Role.admin %>
                <div class="col text-center">
                  <a href="<%= users_path %>" class="text-decoration-none">
                    <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                      <i class="fas fa-users fa-3x mb-3"></i>
                      <span>Usuários</span>
                    </div>
                  </a>
                </div>
              <% end %>
              <div class="col text-center">
                <a href="<%= edit_user_registration_path %>" class="text-decoration-none">
                  <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-user fa-3x mb-3"></i>
                    <span>Perfil</span>
                  </div>
                </a>
              </div>
              <div class="col text-center">
                <form id="logout-form" action="<%= destroy_user_session_path %>" method="POST" style="display: none;">
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                  <input type="hidden" name="_method" value="delete">
                </form>
                <a href="#" class="text-decoration-none" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
                  <div class="border rounded p-4 shadow-sm h-100 d-flex flex-column justify-content-center align-items-center">
                    <i class="fas fa-sign-out-alt fa-3x mb-3"></i>
                    <span>Logout</span>
                  </div>
                </a>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
