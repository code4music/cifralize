<% provide(:title, "#{t('app')} | Gravações") %>
<% provide(:description, "Gravações de músicas públicas") %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Gravações</li>
  </ol>
</nav>

<%= link_to "Nova Gravação", new_recording_path, class: 'btn btn-primary float-end' %><br><br>

<h2>Gravações Públicas</h2>

<% @recordings.each do |rec| %>
  <p>
    <strong><%= rec.title %></strong>
    <%= link_to home_recording_path(rec.uuid), target: "_blank", class: "btn btn-sm btn-outline-primary" do %>
      <i class="fas fa-share-square"></i>
    <% end %>
  </p>
  <% if rec.audio_file.attached? %>
    <audio controls src="<%= url_for(rec.audio_file) %>"></audio>
  <% end %>
<% end %>
